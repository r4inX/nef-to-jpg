# Include documentation and configuration files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml
include requirements.txt
include requirements-dev.txt

# Include package data
recursive-include src/nef_converter *.py
recursive-include tests *.py

# Include example files if they exist
recursive-include examples *.py *.md

# Exclude unwanted files
exclude nef_converter.py
exclude photoconverter/*
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.orig
global-exclude *.rej
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.nef
global-exclude *.NEF
global-exclude *.jpg
global-exclude *.jpeg